{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "paths": {
      "@domain": ["./packages/domain/src/index.ts"],
      "@domain/*": ["./packages/domain/src/*"],
      "@application": ["./packages/application/src/index.ts"],
      "@application/*": ["./packages/application/src/*"],
      "@infrastructure": ["./packages/infrastructure/src/index.ts"],
      "@infrastructure/*": ["./packages/infrastructure/src/*"],
      "@ui-react": ["./packages/ui-react/src/index.ts"],
      "@ui-react/*": ["./packages/ui-react/src/*"],
      "@cli": ["./packages/cli/src/index.ts"],
      "@cli/*": ["./packages/cli/src/*"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./packages/domain" },
    { "path": "./packages/application" },
    { "path": "./packages/infrastructure" },
    { "path": "./packages/ui-react" },
    { "path": "./packages/cli" }
  ]
}